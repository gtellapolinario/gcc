# Copy to .env for docker-compose.prod.yml
# cp .env.example .env

# Required in strict profile
GCC_MCP_AUTH_MODE=token
GCC_MCP_AUTH_TOKEN=replace-me

# Optional auth scopes (comma-separated)
GCC_MCP_AUTH_REQUIRED_SCOPES=

# Optional runtime tuning
GCC_MCP_AUDIT_MAX_FIELD_CHARS=4000
GCC_MCP_AUDIT_SIGNING_KEY_ID=prod-2026-q1
GCC_MCP_RATE_LIMIT_PER_MINUTE=120

# Optional path translation (host/client paths -> container/runtime paths)
GCC_MCP_PATH_MAP=
GCC_MCP_ALLOWED_ROOTS=
# Example:
# GCC_MCP_PATH_MAP=[{"from":"/home/dev/worktrees","to":"/workspace/repos"}]
# GCC_MCP_ALLOWED_ROOTS=/workspace/repos
